{
  "name": "interviewcoder",
  "version": "1.0.0",
  "description": "An invisible AI assistant for technical interviews",
  "main": "main.js",
  "scripts": {
    "setup": "node install.js",
    "start": "electron .",
    "build": "electron-builder",
    "package-win": "electron-builder --win --x64",
    "package-mac": "electron-builder --mac",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "interview",
    "coding",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.interviewcoder.app",
    "productName": "Interview Coder",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-store": "^10.0.1",
    "fs-extra": "^11.3.0",
    "node-addon-api": "^7.1.1",
    "openai": "^4.89.1",
    "screenshot-desktop": "^1.15.1"
  },
  "devDependencies": {
    "electron-rebuild": "^3.2.9"
  }
}
