{
  "name": "interviewcoder",
  "version": "1.0.0",
  "description": "An invisible AI assistant for technical interviews",
  "main": "main.js",
  "scripts": {
    "setup": "node install.js",
    "start": "electron .",
    "build": "electron-builder",
    "package-win": "electron-builder --win --x64",
    "package-mac": "electron-builder --mac",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "interview",
    "coding",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.interviewcoder.app",
    "productName": "Interview Coder",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/.{idea,git,github}",
      "!**/tmp"
    ],
    "extraResources": [
      {
        "from": "Invisiwind",
        "to": "Invisiwind",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "child_process": "^1.0.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-store": "^10.0.1",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.0",
    "node-addon-api": "^7.1.1",
    "openai": "^4.89.1",
    "os": "^0.1.2",
    "screenshot-desktop": "^1.15.1"
  },
  "devDependencies": {
    "electron-rebuild": "^3.2.9"
  }
}