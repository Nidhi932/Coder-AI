<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Advanced Speech to Text Converter</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <div class="card shadow-lg">
            <div class="card-header bg-gradient">
              <h2 class="text-center mb-0">
                <i class="fas fa-microphone-alt me-2"></i>
                Advanced Speech to Text Converter
              </h2>
            </div>
            <div class="card-body">
              <!-- Status Badge -->
              <div class="text-center mb-4">
                <span id="status" class="badge bg-success">Ready</span>
              </div>

              <!-- Controls -->
              <div class="controls-container mb-4">
                <div class="row g-3">
                  <div class="col-md-4">
                    <select id="languageSelect" class="form-select">
                      <option value="en-US">English (US)</option>
                      <option value="en-GB">English (UK)</option>
                      <option value="es-ES">Spanish</option>
                      <option value="fr-FR">French</option>
                      <option value="de-DE">German</option>
                      <option value="it-IT">Italian</option>
                      <option value="pt-PT">Portuguese</option>
                      <option value="ru-RU">Russian</option>
                      <option value="ja-JP">Japanese</option>
                      <option value="ko-KR">Korean</option>
                      <option value="zh-CN">Chinese (Simplified)</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <select id="voiceSelect" class="form-select">
                      <option value="default">Default Voice</option>
                      <option value="male">Male Voice</option>
                      <option value="female">Female Voice</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <div class="d-flex justify-content-center gap-2">
                      <button id="startBtn" class="btn btn-success btn-lg">
                        <i class="fas fa-microphone"></i> Start Recording
                      </button>
                      <button
                        id="stopBtn"
                        class="btn btn-danger btn-lg"
                        disabled
                      >
                        <i class="fas fa-stop"></i> Stop
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Advanced Settings -->
              <div class="advanced-settings mb-4">
                <div class="row g-3">
                  <div class="col-md-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="punctuationToggle"
                        checked
                      />
                      <label class="form-check-label" for="punctuationToggle">
                        <i class="fas fa-punctuation"></i> Auto-punctuation
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="capitalizationToggle"
                        checked
                      />
                      <label
                        class="form-check-label"
                        for="capitalizationToggle"
                      >
                        <i class="fas fa-text-height"></i> Auto-capitalization
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="autoScroll"
                        checked
                      />
                      <label class="form-check-label" for="autoScroll">
                        <i class="fas fa-scroll"></i> Auto-scroll
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="darkModeToggle"
                      />
                      <label class="form-check-label" for="darkModeToggle">
                        <i class="fas fa-moon"></i> Dark Mode
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Stats -->
              <div class="stats-container mb-3">
                <div class="row text-center">
                  <div class="col-md-3">
                    <div class="stat-box">
                      <i class="fas fa-words"></i>
                      <span>Words: </span>
                      <span id="wordCount">0</span>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-box">
                      <i class="fas fa-font"></i>
                      <span>Characters: </span>
                      <span id="charCount">0</span>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-box">
                      <i class="fas fa-clock"></i>
                      <span>Duration: </span>
                      <span id="duration">00:00</span>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="stat-box">
                      <i class="fas fa-tachometer-alt"></i>
                      <span>Speed: </span>
                      <span id="speakingSpeed">0 wpm</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Output Area -->
              <div class="form-group mb-3">
                <label for="output" class="form-label">
                  <i class="fas fa-text-width me-2"></i>Transcription:
                </label>
                <textarea
                  id="output"
                  class="form-control"
                  rows="8"
                  readonly
                ></textarea>
              </div>

              <!-- Action Buttons -->
              <div class="action-buttons">
                <div class="row g-3">
                  <div class="col-md-3">
                    <button id="clearBtn" class="btn btn-outline-danger w-100">
                      <i class="fas fa-trash"></i> Clear
                    </button>
                  </div>
                  <div class="col-md-3">
                    <button id="copyBtn" class="btn btn-outline-primary w-100">
                      <i class="fas fa-copy"></i> Copy Text
                    </button>
                  </div>
                  <div class="col-md-3">
                    <button id="saveBtn" class="btn btn-outline-success w-100">
                      <i class="fas fa-save"></i> Save
                    </button>
                  </div>
                  <div class="col-md-3">
                    <button id="downloadBtn" class="btn btn-outline-info w-100">
                      <i class="fas fa-download"></i> Download
                    </button>
                  </div>
                </div>
              </div>

              <!-- History Section -->
              <div class="history-section mt-4">
                <h5><i class="fas fa-history me-2"></i>Recent Transcripts</h5>
                <div id="historyList" class="list-group">
                  <!-- History items will be added here dynamically -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Toast Notifications -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <!-- Toasts will be added here dynamically -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
  </body>
</html>
